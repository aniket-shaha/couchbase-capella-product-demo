<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Capella Product Search</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="bg-gray-900 text-white min-h-screen flex flex-col items-center px-4 py-6 font-sans">
    <h1 class="text-3xl font-bold mb-6 text-center">üîç Capella Product Search</h1>

    <!-- Search Form -->
    <form id="searchForm" class="w-full max-w-md flex gap-2 mb-6">
      <input
        id="query"
        type="text"
        placeholder="Search products (e.g. mouse, laptop)..."
        class="flex-1 px-4 py-2 rounded-lg text-black focus:outline-none"
        required
        autofocus
      />
      <button
        type="submit"
        class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-lg font-semibold"
      >
        Search
      </button>
    </form>

    <!-- Status Message -->
    <div id="statusMessage" class="mb-4 text-sm text-gray-400 text-center"></div>

    <!-- Results Container -->
    <div id="results" class="w-full max-w-4xl grid gap-4 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3"></div>

    <!-- Spinner -->
    <div id="loadingSpinner" class="hidden text-center mt-8">
      <div class="w-10 h-10 border-4 border-blue-500 border-t-transparent rounded-full animate-spin mx-auto"></div>
      <p class="text-sm mt-2 text-gray-400">Loading results...</p>
    </div>

    <!-- No Results Illustration -->
    <div id="emptyState" class="hidden text-center mt-8">
      <img src="https://illustrations.popsy.co/gray/searching.svg" alt="No results" class="w-40 h-40 mx-auto mb-4 opacity-60" />
      <p class="text-red-400 text-sm">No products found. Try another keyword.</p>
    </div>

    <!-- Top 5 Products -->
    <div class="w-full max-w-4xl mt-12">
      <h2 class="text-2xl font-semibold mb-4">üî• Top 5 Products</h2>
      <div id="topProducts" class="grid gap-4 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3"></div>
    </div>

    <!-- Top Products Spinner -->
    <div id="topProductsSpinner" class="text-center mt-6">
      <div class="w-8 h-8 border-4 border-yellow-400 border-t-transparent rounded-full animate-spin mx-auto"></div>
      <p class="text-sm mt-2 text-gray-400">Loading top products...</p>
    </div>


    <script>
      const form = document.getElementById("searchForm");
      const queryInput = document.getElementById("query");
      const resultsContainer = document.getElementById("results");
      const loadingSpinner = document.getElementById("loadingSpinner");
      const emptyState = document.getElementById("emptyState");
      const statusMessage = document.getElementById("statusMessage");
      const topProductsContainer = document.getElementById("topProducts");

      const API_BASE_URL = "https://couchbase-capella-product-demo.onrender.com";

      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        const query = queryInput.value.trim();
        if (!query) return;

        // Reset UI
        resultsContainer.innerHTML = "";
        statusMessage.innerText = "";
        emptyState.classList.add("hidden");
        loadingSpinner.classList.remove("hidden");

        try {
          const res = await fetch(`${API_BASE_URL}/search?q=${encodeURIComponent(query)}`);
          const data = await res.json();

          loadingSpinner.classList.add("hidden");

          if (!data.length) {
            emptyState.classList.remove("hidden");
            statusMessage.innerHTML = `üîç No results for "<span class="text-yellow-300">${query}</span>"`;
            return;
          }

          statusMessage.innerHTML = `‚úÖ Showing <strong>${data.length}</strong> result(s) for "<span class="text-yellow-300">${query}</span>"`;

          resultsContainer.innerHTML = data.map(item => `
            <div class="bg-white text-black p-4 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300">
              <img src="${item.image_url}" alt="${item.name}" class="w-full h-40 object-cover rounded-md mb-3" />
              <h2 class="text-xl font-bold mb-2">${item.name}</h2>
              <p class="text-sm text-gray-700">Category: ${item.category}</p>
              <p class="text-sm">Price: ‚Çπ${item.price}</p>
              <p class="text-sm">Rating: ‚≠ê ${item.rating}</p>
              <p class="text-sm text-green-600">In Stock: ${item.stock}</p>
            </div>
          `).join("");
        } catch (err) {
          loadingSpinner.classList.add("hidden");
          statusMessage.innerHTML = `<span class="text-red-500">‚ö†Ô∏è Error fetching results. Try again later.</span>`;
          console.error(err);
        }
      });

      async function fetchTopProducts() {
        const topSpinner = document.getElementById("topProductsSpinner");
        topSpinner.classList.remove("hidden");
        topProductsContainer.innerHTML = "";

        try {
          const res = await fetch(`${API_BASE_URL}/top-products`);
          const data = await res.json();

          topSpinner.classList.add("hidden");

          if (!data.length) {
            topProductsContainer.innerHTML = `<p class="text-gray-400">No top products available.</p>`;
            return;
          }

          topProductsContainer.innerHTML = data.map(item => `
            <div class="bg-white text-black p-4 rounded-lg shadow-md hover:shadow-xl transition duration-300">
              <img src="${item.image_url}" alt="${item.name}" class="w-full h-40 object-cover rounded-md mb-3" />            
              <h3 class="text-lg font-bold mb-1">${item.name}</h3>
              <p class="text-sm text-gray-700">Category: ${item.category}</p>
              <p class="text-sm">Price: ‚Çπ${item.price}</p>
              <p class="text-sm">Rating: ‚≠ê ${item.rating}</p>
              <p class="text-sm text-green-600">In Stock: ${item.stock}</p>
            </div>
          `).join("");
        } catch (err) {
          topSpinner.classList.add("hidden");
          console.error("Error fetching top products:", err);
          topProductsContainer.innerHTML = `<p class="text-red-500">Failed to load top products.</p>`;
        }
      }

      // Load top products on page load
      fetchTopProducts();
    </script>

  </body>
</html>
